// Movies table: stores basic movie information.
Table movies {
  id          int         [pk, increment] // Internal auto-increment primary key.
  movieId     int         [unique]        // Unique movie ID from the API.
  adult       boolean
  backdrop_path varchar(255)
  original_language varchar(10)
  original_title    varchar(255)
  overview    text
  popularity  decimal(8,3)
  poster_path varchar(255)
  release_date date
  title       varchar(255)
  video       boolean
  vote_average decimal(3,1)
  vote_count  int
}

// Genres table: stores available genres.
Table genres {
  id   int         [pk]
  name varchar(50)
}

// Join table: connects movies to genres (many-to-many relationship).
Table movie_genres {
  movie_id int  [ref: > movies.id]
  genre_id int  [ref: > genres.id]
  primary key (movie_id, genre_id)
}

// Images table: stores images for movies.
Table images {
  id           int         [pk, increment]
  movie_id     int         [ref: > movies.id]
  type         enum("backdrop", "logo", "poster")
  file_path    varchar(255)
  aspect_ratio decimal(5,3)
  height       int
  width        int
  vote_average decimal(3,1)
  vote_count   int
  iso_639_1    varchar(10)
}

// Movie Cast table: stores cast details for a movie.
// Uses the API's unique credit_id as the primary key.
Table movie_cast {
  credit_id      varchar(50)  [pk]
  movie_id       int          [ref: > movies.id]
  person_id      int
  cast_order     int
  character_name varchar(255) // Renamed from 'character'
  name           varchar(255)
  original_name  varchar(255)
  gender         int
  popularity     decimal(8,3)
  profile_path   varchar(255)
}

// Movie Crew table: stores crew details for a movie.
// Uses the API's unique credit_id as the primary key.
Table movie_crew {
  credit_id      varchar(50)  [pk]
  movie_id       int          [ref: > movies.id]
  person_id      int
  department     varchar(100)
  job            varchar(100)
  name           varchar(255)
  original_name  varchar(255)
  gender         int
  popularity     decimal(8,3)
  profile_path   varchar(255)
}
